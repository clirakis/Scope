Int_t i;
Float_t ratio;
TSlider *slider;
TCanvas *c1;
TH2C *world;

void conway(Int_t niterations = 100000)
{
//
// Simple example illustrating how to use the C++ interpreter	
// to fill histograms in a loop and show the graphics results
// This program is a variant of the tutorial "hsum".
// It illustrates the use of Timers.

  c1 = new TCanvas("c1","Conway's Game of Life",200,10,600,400);
  c1->SetGrid();


// Create some histograms.
  world = new TH2C("world","playing ground", 100, 0., 100.,
			 100, 0.,100.);

// Create a TTimer
  TTimer timer("conwayUpdate()",300); // update every 300 msec
  timer.TurnOn();

  for (Int_t i=0; i<nfill; i++) 
  {
      UpdatePlayingField();
     if (gSystem->ProcessEvents()) break;
  }
  timer.TurnOff();
  conwayUpdate();
}

void conwayUpdate()
{
   c1->Modified();
   c1->Update();
}
